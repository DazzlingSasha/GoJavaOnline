<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>helloWorld</display-name>

    <description>11111</description>

    <servlet>
        <servlet-name>clock</servlet-name>
        <servlet-class>com.todoList.servlets.ClockServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Hello</servlet-name>
        <servlet-class>com.todoList.servlets.HelloServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>index.jsp?add</servlet-name>
        <servlet-class>com.todoList.servlets.AddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>update</servlet-name>
        <servlet-class>com.todoList.servlets.UpdateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>clock</servlet-name>
        <url-pattern>/clock</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Hello</servlet-name>
        <url-pattern>/hello1</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>index.jsp?add</servlet-name>
        <url-pattern>/index.jsp?add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>update</servlet-name>
        <url-pattern>/index.jsp?update</url-pattern>
    </servlet-mapping>
</web-app>
