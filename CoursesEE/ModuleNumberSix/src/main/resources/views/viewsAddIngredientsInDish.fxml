<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane id="AnchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="550.0" prefWidth="540.0" stylesheets="/views/style/style.css" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="restaurant.Views.ViewsIngredientsForDish">
    <children>
        <!-- Таблица в которую мы будем выводит наш pojo -->
        <TableView fx:id="ingredientTableView" layoutX="12.0" layoutY="125.0" prefHeight="400.0" prefWidth="322.0">
            <columns>
                <!-- Колонки таблицы -->
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="№ id"/>
                <TableColumn fx:id="nameIngredientColumn" prefWidth="150.0" text="Ingredient"/>
                <TableColumn fx:id="quantityColumn" prefWidth="50.0" text="Ingredient"/>
            </columns>
        </TableView>

        <Label layoutX="160.0" layoutY="56.0" text="Name Dish" /><Label fx:id="nameDish" layoutX="190.0" layoutY="56.0" />

        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label layoutX="140.0" layoutY="96.0" text="All Ingredients Dish:">
            <font>
                <Font name="Verdana" size="20.0"/>
            </font>
        </Label>

        <ComboBox fx:id="butSelectIngredients" layoutX="12.0" layoutY="50.0" prefWidth="150.0" promptText="select menu" />


        <Button fx:id="butAdd" layoutX="10.0" layoutY="6.0" mnemonicParsing="false" onAction="#ActionIngredient" prefWidth="100.0" text="Add new ingredient"/>
        <Button fx:id="butDelete" layoutX="120.0" layoutY="6.0" mnemonicParsing="false" onAction="#ActionIngredient" prefWidth="100.0" text="Delete ingredient"/>

        <Button cancelButton="true" layoutX="120.0" layoutY="400.0" mnemonicParsing="false" onAction="#handleCancel" prefWidth="90.0" text="Cancel"  />

    </children>
</AnchorPane>
