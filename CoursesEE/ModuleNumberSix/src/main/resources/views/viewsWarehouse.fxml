<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane id="AnchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="670.0" stylesheets="/views/style/style.css" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="restaurant.Views.ViewsWarehouse">
    <children>
        <!-- Таблица в которую мы будем выводит наш pojo -->
        <TableView fx:id="tableWarehouse" layoutX="12.0" layoutY="62.0" prefHeight="324.0" prefWidth="252.0">
            <columns>
                <!-- Колонки таблицы -->
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="№ id"/>
                <TableColumn fx:id="idIngredientColumn" prefWidth="100.0" text="Ingredient"/>
                <TableColumn fx:id="quantityColumn" prefWidth="50.0" text="Quantity"/>
                <TableColumn fx:id="unitColumn" prefWidth="50.0" text="Unit"/>
            </columns>
        </TableView>

        <Label layoutX="14.0" layoutY="31.0" text="List all users:">
            <font>
                <Font name="Verdana" size="24.0"/>
            </font>
        </Label>

        <Button fx:id="butAdd" layoutX="12.0" layoutY="6.0" mnemonicParsing="false" onAction="#ActionUser" text="Add new ingredient"/>
        <Button fx:id="butDelete" layoutX="192.0" layoutY="6.0" mnemonicParsing="false" onAction="#ActionUser" text="Delete ingredient"/>
        <Button fx:id="butEdit" layoutX="84.0" layoutY="6.0" mnemonicParsing="false" onAction="#ActionUser" prefWidth="100.0" text="Edit ingredient"/>
        <Button fx:id="butSelectAll" layoutX="277.0" layoutY="6.0" mnemonicParsing="false" onAction="#ActionUser" text="Select all ingredients"/>
        <Button fx:id="butSelectEnds" layoutX="277.0" layoutY="6.0" mnemonicParsing="false" onAction="#ActionUser" text="Select ingredients ends"/>
        <AnchorPane layoutX="375.0" layoutY="4.0" prefHeight="30.0" prefWidth="293.0">
            <children>
                <Button fx:id="butSearch" layoutX="190.0" layoutY="2.0" mnemonicParsing="false" onAction="#ActionUser"
                        text="Search ingredient"/>
                <TextField fx:id="textSearch" layoutX="5.0" layoutY="2.0" prefHeight="25.0" prefWidth="179.0"/>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
